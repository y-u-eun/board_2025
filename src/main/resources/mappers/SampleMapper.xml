<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.kopo.ctc.kopo36.board.repository.SampleMapper">
    <select id="findAll" resultType="Sample">
        SELECT * FROM sample
    </select>

    <select id="findById" resultType="Sample">
        SELECT * FROM sample WHERE id = #{id}
    </select>

    <select id="findAllByTitle" resultType="Sample">
        SELECT * FROM sample WHERE title = #{title}
    </select>
</mapper>